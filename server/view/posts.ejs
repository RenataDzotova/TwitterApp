<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Posts</title>
    <!-- <link rel="stylesheet" href="styles.css"> -->
    <style>
      body {
        background-color: #fffffe;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;

      }

      #container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        width: 300px;
        background-color: #fbffd8;
        margin: 15px;
        border-radius: 16px;
        border: 5px solid #00214d;
        padding: 15px;
        box-shadow: 2px 2px 1px 2px #00214d;
      }

      #publishContainer {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
        width: 300px;
        background-color: #ff5470;
        margin: 10px;
        border-radius: 16px;
        border: 5px solid #00214d;
        padding: 15px;
        box-shadow: 2px 2px 1px 2px #00214d;
      }

      #postsContainer {
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 30px;
        flex-wrap: wrap-reverse;
      }


      #buttonContainer {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: row;
      }

      button {
        background-color: #00ebc7;
        padding: 10px;
        border-radius: 3px;
        border-color: #00214d;
        color: #00214d;
        box-shadow: 2px 2px 1px 2px #00214d;
        font-weight: 700;
      }

      button:hover {
      background-color: #ff5470;
      }

      #screen {
        width: 100%;
        /* height: 100%; */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }

      h1 {
        color: #ff5470;
        font-weight: 700;
        font-size: 45px;
      }

      #username {
        color: #ff5470;
        font-weight: 700;
        font-size: 25px;
      }

      p {
        color: #00214d;
        font-weight: 700;
        font-size: 20px;
      }

      textarea {
        /* border: 3px solid #00214d; */
        width: 250px;
        height: 75px;
        border-radius: 8px;
        margin: 10px;
        box-shadow: inset 0px 4px 4px #D9D9D9;
        border: none;
        border-radius: 2px;
        padding: 20px;
      }

      #formTop {
        width: 300px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }

      #post {
        font-style: italic;
        font-weight: 500;
        color: #00214d;
        background-color: #fffffe;
        border-radius: 16px;
        border: 3px solid #00214d;
        padding: 15px;

      }

      .reported {
        background-color: #fde24f;
        padding: 10px;
        border-radius: 3px;
        border-color: #00214d;
        color: #00214d;
        box-shadow: 2px 2px 1px 2px #00214d;
        font-weight: 700;
      }

      form {
        display: flex;
        flex-direction: column;
        padding: 10px;
        width: 90%;
        align-items: center;
      }

      #postid {
        height: 0.00001px;
      }

    </style>
  </head>
  <body>

    <div id="screen">

      <h1> Welcome </h1>

      <form id="logout" action="/logout" method="post">
          <button type="submit">Logout</button>
      </form>

      <form id="formTop" action="/posts" method="post">

        <div id="publishContainer">
          <p>What are you thinking about?</p>
          <textarea
            name="text"
            placeholder="Come on type smth in here">
          </textarea>
        <button type="submit">Publish</button>
      </div>

      </form>

      <div id="postsContainer">
        <% posts.forEach(function(post) {%>
        <br />

        <div id="container">

            <p id="username"><%= post.user_name%> says...</p>

          <div id="post"> " <%= post.text%> "</div>

          <form action="/edit" method="post">
              <textarea
              name="text"
              id="edit"
              placeholder="edit post here"
              ></textarea>
              <button id="submit">Update Post</button>
          </form>

          <div id="buttonContainer">

              <% if( post.alreadyFollowed===0){ %>
                <form action="/follow/<%= post.user_id%>" method="post">
                  <button type="submit">Follow</button>
                </form>
              <% } else{ %>
                <form action="/unfollow/<%= post.user_id%>" method="post">
                  <button type="submit">Unfollow</button>
                </form>
              <% } %> <% if( post.alreadyReported===0){ %>
                  <form action="/report/<%= post.user_id%>" method="post">
                     <button class="report" type="submit">Report</button>
                  </form>
              <% } else{ %>
                      <div class="reported">Reported</div>
              <% } %>
            </div>
            <p> Post ID: <%= post.id%></p>

        </div>
        <%});%>

      </div>
    </div>

  </body>
</html>
